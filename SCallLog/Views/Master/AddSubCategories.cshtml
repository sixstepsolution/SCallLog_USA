
@{
    ViewBag.Title = "AddSubCategories";
    Layout = "~/Views/Shared/_Layout_SCL.cshtml";
}

<script>
    $(document).ready(function () {
        $('#active_master').addClass("active selected");
        $('#active_cr_dept').addClass("active");

    });
</script>
<script src="~/AngularJS/SCL/addSubCategoryCntrl.js"></script>
<style>
    /*table */
    table {
        border-collapse: collapse;
    }

        table th, table td {
            padding: 3px;
        }

            table th:hover {
                cursor: pointer;
            }

    .arrow-down:after, .arrow-up:after {
        content: ' ';
        position: relative;
        left: 5px;
        border: 6px solid transparent;
    }

    .arrow-down:after {
        top: 12px;
        border-top-color: black;
    }

    .arrow-up:after {
        bottom: 15px;
        border-bottom-color: black;
    }

    .arrow-down, .arrow-up {
        padding-right: 10px;
    }

    .anchor_sorting {
        text-decoration: none;
        color: #fff !important;
    }

        .anchor_sorting:hover {
            color: #fff !important;
        }

    .btn-md-80 {
        width: 90px !important;
    }

    .error {
        color: red;
        border-color: red;
    }

    a.disabledInvisible {
        pointer-events: none;
        cursor: default;
    }

    .required_image {
        width: 7px;
        margin-top: -10px;
    }

    input[type='text'] {
        height: 30px;
    }

    .add-on {
        height: 100%;
    }

    .pagination {
        height: 40px;
        margin: 20px 0;
    }

        .pagination ul {
            display: inline-block;
            margin-left: 0;
            margin-bottom: 0;
            -webkit-border-radius: 3px;
            -moz-border-radius: 3px;
            border-radius: 3px;
            -webkit-box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
            -moz-box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
            box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
        }

            .pagination ul > li {
                display: inline;
            }

                .pagination ul > li:first-child > a, .pagination ul > li:first-child > span {
                    border-left-width: 1px;
                    -webkit-border-radius: 3px 0 0 3px;
                    -moz-border-radius: 3px 0 0 3px;
                    border-radius: 3px 0 0 3px;
                }

                .pagination ul > li > a, .pagination ul > li > span {
                    float: left;
                    padding: 0 14px;
                    line-height: 38px;
                    text-decoration: none;
                    background-color: #ffffff;
                    border: 1px solid #dddddd;
                    border-left-width: 0;
                }

            .pagination ul > .active > a, .pagination ul > .active > span {
                color: #999999;
                cursor: default;
                background: gainsboro;
            }

    .gutter {
        margin-right: 0px;
        margin-left: 0px;
    }

    .container-fluid {
        padding-right: 0px;
        padding-left: 0px;
        margin-right: auto;
        margin-left: auto;
    }

    label {
        display: inline-block;
        max-width: 100%;
        margin-bottom: 5px;
        font-weight: 400;
        font-size: 16px;
    }
</style>
<div class="wrapper" ng-controller="AddSubCategoriesCntrl">
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                User
                <small>Add Sub Category</small>
            </h1>
            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                <li class="active">User</li>
            </ol>
        </section>
        <!-- Main content -->
        <section class="content">
            <div class="row">
                <div class="col-md-12">
                    <!-- Horizontal Form -->
                    <div class="box box-info">
                        <div class="box-header with-border">
                            <h3 class="box-title">Add Sub Category</h3>
                        </div>
                        <!-- /.box-header -->
                        <!-- form start -->
                        <form class="form-horizontal" name="kpaForm">
                            <div class="panel-body">

                                <div id="defaultForm" method="post" action="#" class="form-horizontal bv-form" novalidate="novalidate">

                                    <fieldset style="margin-bottom: 10px;">
                                        <div class="col-lg-12">
                                            <div class="col-lg-2" style="margin-top: 10px;">
                                                Department<span></span>
                                            </div>
                                            <div class="col-lg-4" style="margin-top: 10px;">
                                                <div class="input-group">
                                                    <span class="input-group-addon">
                                                        <i class="fa fa-sort-alpha-asc"></i>
                                                    </span>
                                                    <select class="form-control" id="Dept_Id" name="Dept_Id"
                                                            ng-model="Dept_Id"
                                                            ng-change="getComplaintCategoriesbyDeptID(Dept_Id)"                                                           
                                                            ng-required="capturePanel">
                                                        <option selected="selected" value="">--Please Select--</option>
                                                        <option ng-repeat="d in ComplaintDepartmentsList" ng-value="d.DEPARTMENT_ID">{{d.DEPARTMENT_DESC}}</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-lg-12" style="margin: 10px auto;">
                                            <div class="col-lg-2" style="margin-top: 10px;">
                                                Category<span></span>
                                            </div>

                                            <div class="col-lg-4">
                                                <div class="input-group">
                                                    <span class="input-group-addon">
                                                        <i class="fa fa-sort-alpha-asc"></i>
                                                    </span>
                                                    <select class="form-control" id="CATEGORY_ID" name="CATEGORY_ID"
                                                            ng-model="CATEGORY_ID"
                                                            ng-class="{error: showMsgs && CATEGORY_ID.$error.required}"
                                                            required>
                                                        <option selected="selected" value="">--Please Select--</option>
                                                        <option ng-repeat="d in ComplaintCategoryList | orderBy:'CATEGORY_DESC'" ng-value="d.CATEGORY_ID">{{d.CATEGORY_DESC}}</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-lg-12" style="margin: 10px auto;">
                                            <div class="col-lg-2" style="margin-top: 10px;">
                                                Sub Category Name<span></span>
                                            </div>

                                            <div class="col-lg-4">
                                                <div class="input-group">
                                                    <span class="input-group-addon">
                                                        <i class="fa fa-sort-alpha-asc"></i>
                                                    </span>
                                                    <input style="height: 40px;" type="text" id="SUB_CATEGORY_DESC" class="form-control" placeholder="Sub Category Name" name="SUB_CATEGORY_DESC"
                                                           ng-model="SUB_CATEGORY_DESC" ng-class="{error: showMsgs && SUB_CATEGORY_DESC.$error.required}"
                                                           ng-required="capturePanel">
                                                </div>
                                            </div>
                                        </div>

                                        <div class="col-lg-12" style="margin: 10px auto;">
                                            <div class="col-lg-2" style="margin-top: 10px;">
                                                Status<span></span>
                                            </div>

                                            <div class="col-lg-10">
                                                <div class="input-group">
                                                    <div style="display:inline;display: inline;">
                                                        <input name="Status" value="Active" type="radio" style="width: 18px;height: 18px;" ng-model="Status" ng-required="capturePanel" /> <span ng-class="{error: showMsgs && Status.$error.required}">Active</span>
                                                    </div>

                                                    <div style="margin-right: 15px;margin-left: 15px;display: inline;">
                                                        <input name="Status" value="Inactive" type="radio" style="width: 18px;height: 18px;" ng-model="Status" ng-required="capturePanel" /> <span ng-class="{error: showMsgs && CreateNewDepartmentForm.Status.$error.required}">Inactive</span>
                                                    </div>
                                                </div>
                                            </div>

                                        </div>


                                    </fieldset>

                                    <div class="center-text pull-right">
                                        <button type="button" id="loading-btn" class="btn btn-success" ng-click="SaveSubCategory(Dept_Id,CATEGORY_ID,SUB_CATEGORY_DESC,Status)"><img src="~/Assets/pms_loader.gif" style="width:20px;height:20px;" ng-show="imgLoader_Save" />{{save}}</button>
                                    </div>
                                </div>

                            </div>

                        </form>
                    </div>
                    <!-- /.box -->
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    <div class="container-fluid" ng-cloak>
                        <div class="containerif">
                            <div style="background-color:#fff;height:auto;" id="tblCaseDetails">
                                <div class="row gutter">
                                    <div class="panel-heading">
                                        <h4>Sub Categorys per page</h4>
                                        <span class="form-group page-size form-inline">
                                            <select id="ddlPageSize" class="form-control"
                                                    ng-model="pageSizeSelected"
                                                    ng-change="changePageSize()" style="height:33px">

                                                <option value="2">2</option>
                                                <option value="5">5</option>
                                                <option value="10" selected="selected">10</option>
                                                <option value="25">25</option>
                                                <option value="50">50</option>
                                            </select>
                                        </span>
                                        <div class="col-md-4 pull-right" style="margin-top:-5px;">
                                            <div class="form-group">

                                                <div class="input-group">

                                                    <input type="text" ng-model="search" ng-change="SerachMethod(search)" class="form-control" placeholder="Search">
                                                    <span class="input-group-addon">
                                                        <i class="fa fa-search"></i>
                                                    </span>
                                                </div>
                                            </div>

                                        </div>
                                    </div>

                                    <div ng-show="showLoader" class="text-center">
                                        <span class="fa fa-spin fa-spinner fa-2x"></span>
                                    </div>
                                    <div class="panel-body" ng-show="showTable">
                                        <div class="table-responsive">
                                            <table class="table table-striped table-bordered table-hover tabel-condensed">
                                                <thead style="background-color:#3C8DBC !important;border-collapse:collapse;font-size:16px;color:#fff !important">
                                                    <tr>
                                                        <th ng-click="sort('DeptName')" ng-class="sortClass('DeptName')"><a class="anchor_sorting" href="">Sub Category Id</a>&nbsp;</th>
                                                        <th ng-click="sort('DeptDesc')" ng-class="sortClass('DeptDesc')"><a class="anchor_sorting" href="">Sub Category Name</a>&nbsp;</th>
                                                        <th ng-click="sort('Status')" ng-class="sortClass('Status')"><a class="anchor_sorting" href="">Status</a>&nbsp;</th>
                                                        <th><a class="anchor_sorting" href="">Edit</a>&nbsp;</th>

                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <tr ng-repeat="item in employees | orderBy:'-CID'">

                                                        <td>{{item.DeptName}}</td>
                                                        <td>{{item.DeptDesc}}</td>
                                                        <td>
                                                            <span class="label label-danger" ng-if="item.Status=='Inactive'">{{item.Status}}</span>
                                                            <span class="label label-warning" ng-if="item.Status=='Active'">{{item.Status}}</span>
                                                        </td>
                                                        <td><a href="" data-target="#myModal" data-toggle="modal" ng-click="editSubCategory(item.CID,item.DeptDesc,item.Status)"><i class="fa fa-edit"></i></a></td>


                                                    </tr>
                                                </tbody>
                                                <tfoot>
                                                    <tr>
                                                        <td align="center" colspan="6">
                                                            <div class="pull-left">
                                                                <a class="btn btn-primary">Page: {{pageIndex}} / {{numPages}}</a>
                                                            </div>
                                                            <div class="pull-right">
                                                                <pagination total-items="totalCount" ng-change="pageChanged()" items-per-page="pageSizeSelected" direction-links="true" ng-model="pageIndex" max-size="maxSize" class="pagination" boundary-links="true" rotate="false" num-pages="numPages"></pagination>

                                                            </div>
                                                        </td>
                                                    </tr>
                                                </tfoot>
                                            </table>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </section>
        <!-- /.content -->
    </div>
    <div id="myModal" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Update Category</h4>
                </div>
                <div class="modal-body">
                    <label>Category Name</label>
                    <input type="hidden" ng-model="DeptID" />
                    <input type="text" ng-model="Depname" class="form-control" placeholder="Objective" name="DepName" />
                    <label style="margin-top:10px;">Status</label>
                    <div style="display:inline;display: inline;">
                        <input name="Status" value="Active" type="radio" style="width: 18px;height: 18px;" ng-model="Sts" ng-required="capturePanel" /> Active
                    </div>

                    <div style="margin-right: 15px;margin-left: 15px;display: inline;">
                        <input name="Status" value="Inactive" type="radio" style="width: 18px;height: 18px;" ng-model="Sts" ng-required="capturePanel" /> Inactive
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-success" ng-click="updateSubCategory(DeptID,Depname,Sts)"><i class="fa fa-save" ng-hide="imgLoader_Save2"></i><img src="~/Assets/pms_loader.gif" style="width:20px;height:20px;" ng-show="imgLoader_Save2" /> {{button}}</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal"><i class="fa fa-close"></i> Cancel</button>
                </div>
            </div>
        </div>
    </div>
</div>