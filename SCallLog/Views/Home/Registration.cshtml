
@{
    ViewBag.Title = "Registration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script>
    $(document).ready(function () {
        $('#active_registration').addClass("active");
    });
</script>
<script src="~/AngularJS/company_registration.js?trd=@DateTime.Now.Millisecond"></script>
<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCWa8JYtNI-kZHD0SUgQ-is3fG_6oFwoqM&libraries=places"></script>
<script>
    $(document).ready(function () {
        google.maps.event.addDomListener(window, 'load', initialize);
    });

    function initialize() {
        var input = document.getElementById('location');
        var autocomplete = new google.maps.places.Autocomplete(input);
    }
</script>
<section class="contact py-5">
    <div class="container" ng-controller="crctrl" ng-cloak style="margin-top:80px">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                
                <div class="modal-body">
                    <div class="login px-4 mx-auto mw-100">
                        <h5 class="text-center mb-4">{{SUB}}</h5>

                        <div class="form-group">
                            <label>Company Name</label>

                            <input type="text" class="form-control" name="ComapnyName" id="ComapnyName" ng-model="company.company_name" placeholder="Enter Company Name" aria-describedby="sizing-addon1" required>
                        </div>
                        <div class="form-group">
                            <label>First Name</label>
                            <input type="text" class="form-control" name="firstName" id="firstName" ng-model="company.first_name" placeholder="Enter First Name" aria-describedby="sizing-addon1" required>


                        </div>
                        <div class="form-group">
                            <label>Last Name</label>
                            <input type="text" class="form-control" name="lastName" id="lastName" ng-model="company.last_name" placeholder="Enter Last Name" aria-describedby="sizing-addon1" required>

                        </div>
                        <div class="form-group">
                            <label class="mb-2">Email</label>
                            <input type="email" class="form-control" name="email" id="email" ng-model="company.company_email" placeholder="Enter Email (User Name)" aria-describedby="sizing-addon1" required>

                        </div>
                        <div class="form-group">
                            <label>Mobile</label>
                            <input type="tel" minlength="10" maxlength="10" ng-pattern="mobileFormat" class="form-control" name="mobile" ng-model="company.company_mobile" id="mobile" placeholder="Enter Company Mobile Number" aria-describedby="sizing-addon1" required>

                        </div>
                        <div class="form-group">
                            <label>Location</label>
                            <input type="text" name="location" id="location" class="form-control" ng-model="company.company_address" placeholder="Enter Company Address" required>

                        </div>
                        <div class="form-group">
                            <label>Password</label>
                            <input type="password" name="password" class="form-control" ng-pattern="passwordFormat" ng-model="company.company_password" placeholder="Password" required>
                            <small>
                                (Password should be at least 8 characters
                                and should contain one number,one upper case character and one special character)
                            </small>

                        </div>
                        <div class="form-group">
                            <label>Confirm Password</label>
                            <input type="password" name="cpassword" class="form-control" ng-model="cpassword" placeholder="Confirm password" required>

                        </div>
                        <div class="form-group">
                            <label>
                                Upload Profile Picture
                            </label>
                            <input type="file" id="Attachment" accept="image/*"  class="form-control col-md-8" placeholder="Attachment" name="Attachment" ng-model="Attachment">
                            <button type="button" id="loading-btn" class="btn btn-success col-md-3" ng-click="UploadAttachment()" style="float:right"><img src="~/Assets/pms_loader.gif" style="width:20px;height:20px;" ng-show="UploadAttachmentLoader" /><i class="fa fa-cloud-upload-alt" ng-hide="UploadAttachmentLoader"></i>&nbsp;Upload</button>

                            
                        </div>

                        <div class="form-group" style="margin: 10px auto;">
                            <label>
                                Uploaded Picture
                            </label>

                            <div class="col-lg-4">
                                <table class="table table-striped table-bordered table-hover tabel-condensed">
                                    <tbody id="AttachmentsList">
                                        <tr ng-repeat="a in AttachmentFiles">
                                            <td>
                                                {{a.name}}
                                            </td>
                                            <td style="width: 50px;">
                                                <a href="" ng-click="RemoveAttachment($index)"><i class="fa fa-times"></i></a>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>

                        </div>
                        <small style="text-align:center" ng-show="isFreetrail">
                            30 Days Subscription Free
                        </small>
                        <div class="center-text" style="text-align:center">

                            <button type="button" id="loading-btn" class="btn btn-success" ng-click="company_registration(company,cpassword)">
                                <img src="~/Assets/pms_loader.gif" style="width:20px;height:20px;" ng-show="imgLoader_Save" /><i class="fa fa-save" ng-hide="imgLoader_Save"></i>&nbsp;Registration
                            </button>
                        </div>

                        <p class="text-center pb-4">
                            <a href="#">By clicking Register, I agree to your terms</a>
                        </p>


                    </div>
                </div>

            </div>
        </div>
    </div>
</section>

<div class="cpy-right text-center" >
    <p>© 2019 SCALL. All Rights Reserved | Design by <a href="https://sixstepsolutioon.co.za/" target="_blank">Six Step Solution</a></p>
</div>
