
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/AngularJS/forgotPassword.js?trd=@DateTime.Now.Millisecond"></script>

<section class="contact py-5">
    <div class="container" ng-controller="fpctrl" style="margin-top:80px" ng-cloak>
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">

                <div class="modal-body">

                    <div class="login px-4 mx-auto mw-100">
                        <h5 class="text-center mb-4">Forgot Password</h5>
                        <form action="#" method="post">
                            <div class="form-group">
                                <label class="mb-2">Email address</label>
                                <input type="email" class="form-control" name="username" ng-model="Email" id="username" placeholder="Enter Username(Email)" aria-describedby="sizing-addon1" required>

                                @*<small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>*@
                            </div>
                            @*<div class="form-group">
                                <label class="mb-2">Password</label>
                                <input type="Password" name="password" id="password" ng-model="PMSL.Password" class="form-control" placeholder="Enter Password" aria-describedby="sizing-addon1" required>

                            </div>*@
                            @*<div class="form-group">
                                <label class="mb-2">Confirm Password</label>
                                <input type="Password" name="cpassword" id="cpassword" ng-model="PMSL.CPassword" class="form-control" placeholder="Enter Confirm Password" aria-describedby="sizing-addon1" required>

                            </div>*@
                            <div class="center-text" style="text-align:center">
                                <label class="mb-2"></label>
                                <button type="button" name="btnSearch" class="btn btn-success" ng-click="getPassword(Email)">
                                    <img src="~/Assets/pms_loader.gif" style="width:20px;height:20px;" ng-show="imgLoader_Save" />Submit
                                </button>
                            </div>

                            @*<a href="../Home/Login" style="text-align:center;color:blue">Login</a>*@

                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>

</section>

